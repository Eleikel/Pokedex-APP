@model Application.ViewModels.RegionViewModel


@{
        ViewData["Title"] = "Eliminar Region";
}


<div class="row mt-5">

    <div class="card w-50">
        <div class="card-header bg-dark text-light">
            <h4>¿Deseas Eliminar la Region @Model.Name ?</h4>
        </div>
        <div class="card-body text-center">

            <form method ="post" asp-controller="Region" asp-action="DeletePost">
                    
                    <input type="hidden" asp-for="Id" />
                         
                    <button type="submit" class="btn btn-danger btn-lg">Eliminar </button>
                    <a asp-controller="Region" asp-action="Index" class="btn btn-warning btn-lg">Cancelar</a>

                </form>
        </div>
    </div>
</div>